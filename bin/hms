#!/usr/bin/env bash
set -euo pipefail

# home-manager switch the current host using the configs in our dotfiles

HM_HOST="${HM_HOST:-$(hostname -s)}"

TMPDIR="$(mktemp --tmpdir -d home-manager-build.XXXXXXXXXX)"
trap 'rm -rf "$TMPDIR"' EXIT

pushd "$TMPDIR" > /dev/null

# --out-link into to a file to ensure we have a GC root while activating
generation="$TMPDIR/generation"
nix build -f ~/dev/dotfiles --out-link "$generation" "$@" \
  homeConfigs."$HM_HOST".activationPackage

"$generation"/activate

popd > /dev/null
