[alias]
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    s = status
    co = checkout
    sw = switch
    cm = commit
    b = branch
    a = add
    d = diff
    p = pull
    plo = pull --ff-only origin master
    pso = push --force origin master
    rb = rebase
    fu = fetch upstream
    fo = fetch origin
    ru = rebase upstream/master
    ro = rebase origin/master
    pr = "!echo \"Checking out upstream PR #$1\" && git fetch -q upstream refs/pull/\"$1\"/head && git checkout FETCH_HEAD #"
    pro = "!echo \"Checking out origin PR #$1\" && git fetch -q origin refs/pull/\"$1\"/head && git checkout FETCH_HEAD #"
