[user]
    name = Philip Hayes
    email = philiphayes9@gmail.com
    editor = nvim
    signingkey = C5464595
[core]
    editor = nvim
[push]
	default = simple
[merge]
	conflictstyle = diff3
[alias]
    master = !git branch --list --format=\"%(refname)\" \
        | sed -n -E \"s/^refs\\/heads\\/(master|main)$/\\1/p\" \
        | head -1
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    s = status
    co = checkout
    sw = switch
    cm = commit
    b = branch
    a = add
    d = diff
    p = pull
    plo = !git pull --ff-only origin $(git master)
    pfom = !git push --force origin $(git master)
    pom = !git push origin $(git master)
    rb = rebase
    fu = fetch upstream
    fo = fetch origin
    ru = !git rebase upstream/$(git master)
    ro = !git rebase origin/$(git master)
